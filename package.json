{
  "name": "tool-discovery-mcp",
  "version": "1.0.0",
  "description": "MCP server that searches GitHub in real-time to find developer tools for your workflow pain points. Returns only validated, actively-maintained tools with 500+ stars.",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "tool-discovery-mcp": "./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mathonsunday/tool-discovery.git"
  },
  "homepage": "https://github.com/mathonsunday/tool-discovery#readme",
  "bugs": {
    "url": "https://github.com/mathonsunday/tool-discovery/issues"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node --esm src/index.ts",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "mcp-server",
    "cursor",
    "developer-tools",
    "tool-discovery",
    "github",
    "productivity"
  ],
  "author": "mathonsunday",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}
